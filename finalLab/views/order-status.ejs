<div class="container mt-5">
    <% if (success) { %>
        <div class="alert alert-success">
            <h2>Success</h2>
            <p>
                <%= message %>
            </p>
            <a href="/" class="btn btn-primary">Go to Homepage</a>
        </div>
        <% } else { %>
            <div class="alert alert-danger">
                <h2>Order Failed</h2>
                <p>
                    <%= message %>
                </p>
                <a href="/cart" class="btn btn-secondary">Go back to Cart</a>
            </div>
            <% } %>
</div>