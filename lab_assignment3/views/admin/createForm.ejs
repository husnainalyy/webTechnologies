<div class="px-5 mt-5 py-3 ">

    <h2 class="text-center mt-5 mb-4  text-dark font-weight-bold">Product Details</h2>
    <form method="post" action="/admin/products/create" enctype="multipart/form-data">
        <!-- Brand Dropdown -->
        <div class="form-group mb-4">
            <label for="brand" class="form-label">Brand <i class="bi bi-question-circle" data-toggle="tooltip"
                    data-placement="top" title="Select the brand for the product"></i></label>
            <select class="form-control form-control-lg rounded-pill" id="brand" name="brand" required>
                <option value="">Select a Brand</option>
                <% brands.forEach(brand=> { %>
                    <option value="<%= brand._id %>">
                        <%= brand.brandName %>
                    </option>
                    <% }) %>
            </select>
            <small class="form-text text-muted">Choose a brand from the list.</small>
        </div>

        <!-- Title Input -->
        <div class="form-group mb-4">
            <label for="title" class="form-label">Title <i class="bi bi-info-circle" data-toggle="tooltip"
                    data-placement="top" title="Enter the product title"></i></label>
            <input type="text" class="form-control form-control-lg rounded" id="title" name="title"
                placeholder="Enter Product Title" required>
            <small class="form-text text-muted">Provide a concise and descriptive title for your product.</small>
        </div>

        <!-- Description Input -->
        <div class="form-group mb-4">
            <label for="description" class="form-label">Description <i class="bi bi-info-circle" data-toggle="tooltip"
                    data-placement="top" title="Provide details about the product"></i></label>
            <textarea class="form-control form-control-lg rounded" id="description" name="description" rows="4"
                placeholder="Enter Product Description" required></textarea>
            <small class="form-text text-muted">Add details like features, specifications, and uses.</small>
        </div>

        <!-- Price Input -->
        <div class="form-group mb-4">
            <label for="price" class="form-label">Price <i class="bi bi-currency-dollar" data-toggle="tooltip"
                    data-placement="top" title="Set the product price"></i></label>
            <input type="number" class="form-control form-control-lg rounded" id="price" name="price"
                placeholder="Enter Price" min="1" required>
            <small class="form-text text-muted">Enter the price in your local currency.</small>
        </div>

        <!-- Image Input -->
        <div class="form-group mb-4">
            <label for="productImage" class="form-label">Product Image <i class="bi bi-image" data-toggle="tooltip"
                    data-placement="top" title="Upload an image of the product"></i></label>
            <input type="file" class="form-control form-control-lg rounded" id="productImage" name="productImage"
                accept="image/*" required>
            <small class="form-text text-muted">Choose a clear image that represents your product.</small>
        </div>

        <!-- Submit Button -->
        <div class="d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-info btn-lg rounded-pill px-5 py-3">
                Submit Product
            </button>
        </div>
    </form>
</div>

<!-- Custom Styles -->
<style>
    /* Form Header */
    h2 {
        font-size: 2rem;
        color: #333;
        text-transform: uppercase;
        font-weight: 700;
    }

    /* General Form Styling */
    .form-group label {
        font-weight: 500;
        font-size: 1.1rem;
        color: #555;
    }

    .form-text {
        font-size: 0.9rem;
        color: #6c757d;
    }

    /* Input Fields Styling */
    .form-control {
        border-radius: 12px;
        padding: 10px 20px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        transition: border-color 0.3s ease;
    }

    .form-control:focus {
        border-color: #4e73df;
        box-shadow: 0 0 5px rgba(78, 115, 223, 0.5);
    }

    /* Tooltip Styling */
    .form-label i {
        font-size: 1.2rem;
        cursor: pointer;
    }

    /* Button Styling */
    .btn-primary {
        background-color: #4e73df;
        border-color: #4e73df;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #2e59d9;
        border-color: #2e59d9;
        transform: translateY(-2px);
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
        .container {
            padding-left: 15px;
            padding-right: 15px;
        }

        .btn-lg {
            width: 100%;
        }

        .form-group {
            margin-bottom: 20px;
        }
    }
</style>

<!-- Bootstrap Icons CDN for tooltips -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<!-- Bootstrap Tooltip Initialization -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Enable Bootstrap tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>