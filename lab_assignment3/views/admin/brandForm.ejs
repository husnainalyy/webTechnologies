<div class="container mt-5">
    <h2 class="text-center pt-4 mb-4">Create Brand</h2>
    <form method="post" action="/admin/brands/create" enctype="multipart/form-data">

        <!-- Name Input -->
        <div class="form-group mb-4">
            <label for="brandName" class="form-label">Brand Title</label>
            <input type="text" class="form-control form-control-lg rounded-pill" id="brandName" name="brandName"
                placeholder="Enter Brand Title" required>
        </div>

        <!-- Image Input -->
        <div class="form-group mb-4">
            <label for="brandImage" class="form-label">Brand Image</label>
            <div class="custom-file">
                <input type="file" class="form-control form-control-lg rounded-pill" id="brandImage" accept="image/*"
                    name="brandImage" required>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-info btn-lg rounded-pill px-5 py-3">
                Submit
            </button>
        </div>
    </form>
</div>

<!-- Custom Styles -->
<style>
    /* Form styling */
    .form-group label {
        font-weight: 500;
        font-size: 1.1rem;
    }

    /* File input custom styles */
    .custom-file input[type="file"] {
        padding: 10px;
        border-radius: 12px;
        background-color: #f8f9fa;
        cursor: pointer;
    }

    .custom-file input[type="file"]:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(38, 143, 255, 0.5);
    }

    /* Button Hover Effects */
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
        transform: translateY(-2px);
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
        .container {
            padding-left: 15px;
            padding-right: 15px;
        }

        .btn-lg {
            width: 100%;
        }
    }
</style>