
    <div class="container mt-4">
<br>
        <h3 class=" mt-5 mb-4 text-center">
            <%= pageTitle %>
        </h3>

        <div class="d-flex justify-content-end mb-3">
            <a href="/admin/products/create" class="btn btn-info me-2">Create New Product</a>
            <a href="/admin/brands/create" class="btn btn-info">Create New Brand</a>
        </div>

        <table class="table table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    
                    <th>Title</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% for( let index=0; index < products.length; index++ ) { %>
                    <tr>
                        <td>
                            <%= products[index]._id %>
                        </td>
                        
                        <td>
                            <%= products[index].title %>
                        </td>
                        <td>$<%= products[index].price %>
                        </td>
                        <td>
                            <%= products[index].description %>
                        </td>
                        <td>
                            <img src="<%= products[index].productImage %>" alt="Product Image" class="product-img-icon"
                                data-bs-toggle="modal" data-bs-target="#productImageModal"
                                data-img-src="<%= products[index].productImage %>">
                        </td>
                        <td>
                            <a href="/admin/products/edit/<%= products[index]._id %>"
                                class="btn btn-warning btn-sm">Edit</a>
                            <a href="/admin/products/delete/<%= products[index]._id %>"
                                class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>

    <!-- Modal for displaying full product image -->
    <div class="modal fade" id="productImageModal" tabindex="-1" aria-labelledby="productImageModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="productImageModalLabel">Product Image</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <img id="modalImage" src="" alt="Full Product Image" class="img-fluid rounded">
                </div>
            </div>
        </div>
    </div>

    <!-- Add Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // JavaScript to handle image click and display in modal
        const productImageModal = document.getElementById('productImageModal');
        const modalImage = document.getElementById('modalImage');

        productImageModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const imgSrc = button.getAttribute('data-img-src');
            modalImage.src = imgSrc;
        });

        productImageModal.addEventListener('hidden.bs.modal', function () {
            modalImage.src = '';
        });
    </script>
